    #row1-right
      #row1-right-bottom
        // content
        .container
          h1 Registered Children
          .btn-container
            button(onclick='editChild()') Edit
            button(onclick='saveChild()') Save
            button(onclick='deleteChild()') Delete
          #childrenList
            // contains dummy data from  babiesRegister.pug for each child registered
            table
          tr
            th Name
            th Date Of Birth
            th Age
            th Gender
            th Parent Names
            th Contact
            th Address
            th Period Of Stay
            th Child Brought By
            th Arrival Time
            th Paid Fee(UGX):
            th Child Picked by:
            th Departure Time:
            th Child Number:
          tbody#
          if babies.length 
          each baby in babies
           tr
            td #(baby.name)
            td #(baby.dob)
            td #(baby.age)
            td #(baby.gender)
            td #(baby.parentNames)
            td #(baby.contact)
            td #(baby.address)
            td #(baby.periodOfStay)
            td #(baby.childBroughtBy)
            td #(baby.arrivalTime)
            td #(baby.paidFee)
            td #(baby.childPickedBy)
            td #(baby.departureTime)
            td #(baby.childNumber)           
            td 
               a(href= "#") Update
            td 
               form(method="POST" action="/delete")
                input(type="hidden" name="id" value=baby._id)
                button(type="submit") Delete
             

