doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Babies registered
    // cdn bootstrap css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/renderBabies.css')
  body
    #logo-nav-parent.text-bg-light 
      #logo-div.text-success.text-bg-light 
        h4.text-bg-success DayStar day care Kindergarten 
      div(w3-include-html='/includes-navbar/navbar.html')
    .container-fluid
      h1.text-center.my-6 List Of Children
      table.table.table-striped
        thead
          tr
            th Name
            th Date Of Birth
            th Age
            th Gender
            th Parent Names
            th Contact
            th Address
            th Period Of Stay
            th Child Brought By
            th Arrival Time
            th Paid Fee(UGX):
            th Child Picked by:
            th Departure Time:
            th Child Number:
            th Update:
            th Delete:
        tbody
          if babies.length 
            each baby in babies
              tr
                td #{baby.name}
                td #{baby.dob}
                td #{baby.age}
                td #{baby.gender}
                td #{baby.parentNames}
                td #{baby.contact}
                td #{baby.address}
                td #{baby.periodOfStay}
                td #{baby.childBroughtBy}
                td #{baby.arrivalTime}
                td #{baby.paidFee}
                td #{baby.childPickedBy}
                td #{baby.departureTime}
                td #{baby.childNumber}   
                td 
                  a.btn.btn-primary.btn-block.btn-success(href= "/babiesUpdate/"+ baby._id) Update
                td 
                  form(method="POST" action="/delete")
                    input(type="hidden" name="id" value=baby._id)
                    button.btn.btn-danger(type="submit") Delete
                    
