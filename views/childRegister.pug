doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Child Registry
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')

  link(rel='stylesheet' href='/css/childRegister.css')
  
//- div(w3-include-html='/includes-navbar/navbar.html')


.container 
  h1 Child Registry
  form#registrationForm(action= '/childRegister' method='POST')
    .form-group
      label(for='name') Name:
      input#name(type='text' name='name' )
    .form-group
      label(for='dob') Date of Birth:
      input#dob(type='date' name='dob' )
    .form-group
      label(for='age') Age:
      input#age(type='number' name='age' )
    .form-group
      label(for='gender') Gender:
      select#gender(name='gender' )
        option(value='') Select Gender
        option(value='male') Male
        option(value='female') Female
        option(value='other') Other
    .form-group
      label(for='parentNames') Parent Names:
      input#parentNames(type='text' name='parentNames' )
    .form-group
      label(for='contact') Contact:
      input#contact(type='text' name='contact' )
    .form-group
      label(for='address') Address:
      input#address(type='text' name='address' )
    .form-group
      label(for='periodOfStay') Period of Stay:
      input#periodOfStay(type='text' name='periodOfStay' )
    .form-group
      label(for='childNumber') Child Number:
      input#childNumber(type='text' name='childNumber' )
    .form-group
      label(for='image') Image:
      input#image(type='file' name='image' accept='image/*' onchange='previewImage(event)' required='')
      img#preview(src='#' alt='Preview Image' style='display:none; max-width: 200px; margin-top: 10px;')
    input(type='submit' value='Register' name='image')

script(src='/js/childRegister.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')
